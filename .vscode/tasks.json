{
    // Courtesy of https://www.allisonthackston.com/articles/vscode-docker-ros2.html. -njreichert
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "source /opt/ros/humble/setup.bash && colcon build --cmake-args '-DCMAKE_EXPORT_COMPILE_COMMANDS=ON'"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "colcon test && colcon test-result"
        },
        {
            "type": "colcon",
            "args": [
            "build",
            "--symlink-install",
            "--event-handlers",
            "console_cohesion+",
            "--base-paths",
            "/workspace",
            "--cmake-args",
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": [
            "$catkin-gcc"
            ],
            "group": "build",
            "label": "colcon: build"
        }
    ]
}
