        </geometry>
      </collision>
      <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
        <origin xyz="0.15 0 0.075" rpy="0 0 0" />
      </xacro:inertial_box> -->
  </link>

  <gazebo reference="chassis">
    <material>Gazebo/White</material>
  </gazebo>

  <!-- Back Left Wheel -->
  <link name="left_back_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.04" />
      </geometry>
      <material name="blue" />
    </visual>
