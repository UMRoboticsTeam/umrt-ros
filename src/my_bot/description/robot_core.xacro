  </link>

  <!-- Front Right Wheel -->
  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.04" />
      </geometry>
      <material name="blue" />
    </visual>
    <!-- <collision>
        <geometry>
          <cylinder radius="0.05" length="0.04" />
        </geometry>
