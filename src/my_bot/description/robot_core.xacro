<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro" />
  <xacro:include filename="colours.xacro" />

  <!-- ====================== Constants ======================== -->
  <xacro:property name="wheel_from_center" value="0.2"/>

  <!-- ====================== Links ======================== -->
  <!-- Base Link -->
  <link name="base_link">

  </link>

  <!-- Chassis -->
  <link name="chassis">
    <visual>
      <!-- shift box forward so chassis link origin is centered at back bottom -->
      <origin xyz="0.375 0 0.075" />
      <geometry>
        <box size="0.75 0.3 0.15" />
      </geometry>
      <material name="white" />
    </visual>
    <!-- <collision>
